{
	"version": "2.0.0",
	"tasks": [
		{
            "label": "watch",
            "dependsOn": [
                "npm: watch:tsc",
                "npm: watch:esbuild"
            ],
            "presentation": {
                "reveal": "never"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "options": {
                "cwd": "${workspaceFolder}/extensions"
            }
        },
        {
            "type": "npm",
            "script": "watch:esbuild",
            "group": "build",
            "problemMatcher": "$esbuild-watch",
            "isBackground": true,
            "label": "npm: watch:esbuild",
            "presentation": {
                "group": "watch",
                "reveal": "never"
            },
            "options": {
                "cwd": "${workspaceFolder}/extensions"
            }
        },
		{
            "type": "npm",
            "script": "watch:tsc",
            "group": "build",
            "problemMatcher": "$tsc-watch",
            "isBackground": true,
            "label": "npm: watch:tsc",
            "presentation": {
                "group": "watch",
                "reveal": "never"
            },
            "options": {
                "cwd": "${workspaceFolder}/extensions"
            }
        },
		{
			"type": "npm",
			"script": "watch-tests",
			"problemMatcher": "$tsc-watch",
			"isBackground": true,
			"presentation": {
				"reveal": "never",
				"group": "watchers"
			},
			"group": "build",
            "options": {
                "cwd": "${workspaceFolder}/extensions"
            }
		},
		{
			"label": "tasks: watch-tests",
			"dependsOn": [
				"npm: watch",
				"npm: watch-tests"
			],
			"problemMatcher": []
		},
        {
            "type": "npm",
            "script": "pretest",
            "group": "test",
            "problemMatcher": [],
            "label": "npm: pretest",
            "detail": "npm run compile-tests && npm run compile && npm run lint",
            "options": {
                "cwd": "${workspaceFolder}/extensions"
            }
        },
        {
            "type": "npm",
            "script": "compile",
            "group": "build",
            "problemMatcher": [],
            "label": "npm: compile",
            "detail": "npm run check-types && npm run lint && node esbuild.js",
            "options": {
                "cwd": "${workspaceFolder}/extensions"
            }
        }
	]
}
